<div class="card mb-3 list d-flex" id="list_<%= list.id %>">
  <div class="card-body pb-1">
    <div class="d-flex">
      
      <div class="flex-grow-1 ms-3 text-break">
        <h5 class='card-title'>
          <%= link_to list, list_path(list) %>
        </h5>
      
        <p class="card-subtitle mb-2 text-muted">
          <%= list.description %>
        </p>

        <% if list.topics.any? %>
          <p>
            <% list.topics.first(10).each do |topic| %>
              <span class="badge bg-light text-dark">
                <%= link_to topic, lists_path(topic: topic), class: 'text-decoration-none link-dark' %>
              </span>
            <% end %>
          </p>
        <% elsif list.project_topics.any? %>

          <p>
            <% list.project_topics.first(5).each do |project_topic, count| %>
              <span class="badge bg-light text-dark">
                <%= project_topic %>
              </span>
            <% end %>
          </p>
        <% end %>

        <p class="card-subtitle mb-2 text-muted">
          <i><small>
            <%= number_with_delimiter list.stars %> stars <br/>
            <%= number_with_delimiter list.forks %> forks <br/>
            <%= number_with_delimiter list.projects_count %> projects
          </small></i>
        </p>
        <p class="card-subtitle mb-2 text-muted"><i><small>
          Last updated: <%= list.last_updated_at.strftime("%d %b %Y") %>
        </small></i></p>
      </div>
      <div class="flex-shrink-0">
        <%# todo avatar url %>
        <img src="" class="rounded" height='40' width='40' onerror="this.style.display='none'">
      </div>  
    </div>
  </div>
</div>